{{#each mylist}}
    <div class="col-md-7 mx-auto mt-4">
        <div class="card">
            <div class="card-header">
            <h4 class="card-title d-flex-justify-content-between align items-center">
                {{user}}
            </h4>
            <p>@{{username}}</p>               
            </div>
            <div class="card-body">
                <div class="dropdown-container" tabindex="-1">
                    <div class="three-dots">
                    </div>
                        <div class="dropdown">
                            <div class="form-group">
                                <a href="/notes/edit/{{_id}}" class="btn btn-primary btn-block mt-2" style="color: white;"><div>Edit post</div></a>
                            </div>
                            <div class="form-group">
                                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button class="btn btn-danger btn-block mt-2" type="submit">Delete post</button>
                                </form>
                            </div>
                        </div>
                    </div> 
                <p>{{message}}</p>
                <hr>
                <p>Published {{timeago date}}</p>
            </div>
        </div>
    </div>
    {{else}}
    <div class="col-md-5 mx-auto mt-5">
        <div class="card">
            <div class="card-body">
                <h3 class="text-center">You are not twited yet</h3>
                <p class="lead text-center"></p>
                <a href="/notes/add" class="btn btn-success btn-block">Write your first twit here!</a>
            </div>
        </div>
    </div>
{{/each}}
